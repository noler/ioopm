GCC =

SOURCE = source/
BUILD  = build/

TARGET = $(BUILD)db.exe
OBJECTS += $(patsubst $(SOURCE)%.c, $(BUILD)%.o, $(wildcard $(SOURCE)*.c))

all: $(TARGET)

clean:
	rm -r $(BUILD)

$(TARGET): $(OBJECTS)
	$(GCC)gcc -Wall -std=c11 -g -o $@ $(OBJECTS)

$(BUILD)%.o: $(SOURCE)%.c $(BUILD)
	$(GCC)gcc -Wall -std=c11 -g -c -o $@ $<

$(BUILD):
	mkdir $(BUILD)
